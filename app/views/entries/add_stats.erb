<!doctype html>

<html lang = "en">
<head>
  <meta charset="UTF-8">
  <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css">
  <link rel="stylesheet" type="text/css" href="/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0">
</head>

<form method="post" action="/edit_entry">

<body class= "maxout2">

<div class = "show">

<br></br>

<% @entry.exercise_entries.each do |exercise| %>
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <strong><%= Exercise.find(exercise.exercise_id).name %></strong>
  <br></br>
  Weight:<input type="text" name=<%="exercise_entry_ids[#{exercise.id}][weight]"%> value="<%= exercise.weight %>">
  <br></br>
  Reps:<input type="text" name=<%="exercise_entry_ids[#{exercise.id}][reps]"%> value="<%= exercise.reps %>">
  <br></br>
<% end %>
  <input type="submit" value="submit">
</div>

<img src="/time.jpg" class = "time" style="width:350px;height:400px;">

</form>
</body>
</html>





